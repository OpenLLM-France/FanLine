{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--log-cli-level=DEBUG",
                "${file}",
                "-s"
            ],
            "env": {
                "TESTING": "true",
                "PYTHONPATH": "${workspaceFolder}",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "0",
                "CELERY_BROKER_URL": "redis://localhost:6379/0",
                "CELERY_RESULT_BACKEND": "redis://localhost:6379/0"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        },
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--log-cli-level=DEBUG",
                "tests/",
                "-s"
            ],
            "env": {
                "TESTING": "true",
                "PYTHONPATH": "${workspaceFolder}",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "0",
                "CELERY_BROKER_URL": "redis://localhost:6379/0",
                "CELERY_RESULT_BACKEND": "redis://localhost:6379/0"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        },
        {
            "name": "Debug API Container",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": ["Debug API Container", "Debug Tests"]
        },
        {
            "name": "Debug All file",
            "configurations": ["Debug API Container", "Debug Tests file"]
        }
    ]
} 
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_api_endpoints.py",
                "-v",
                "-s"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "1"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        },
        {
            "name": "Python: Debug FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "REDIS_HOST": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_DB": "0"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": ["Python: Debug FastAPI", "Python: Debug Tests"]
        }
    ]
} 